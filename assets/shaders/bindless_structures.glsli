#define ENG_TYPE_UNSIZED(type, name) type name##_us[]

#define ENG_DECLARE_STORAGE_BUFFER(type)                                                                               \
    layout(set = 0, binding = BINDLESS_STORAGE_BUFFER_BINDING, scalar) buffer SB_##type
